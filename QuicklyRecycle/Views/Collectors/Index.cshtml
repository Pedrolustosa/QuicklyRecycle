@model X.PagedList.IPagedList<QuicklyRecycle.Models.Collector>
@using X.PagedList.Mvc.Core;
@using X.PagedList.Mvc.Common;

@{

    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-3">
    <h2 class="font-weight-bold text-left display-3">Coletores</h2>

    <div class="container">
        <div class="card border-dark">
            <div class="card-header bg-dark text-light text-center"><i class="fas fa-table"></i> Lista</div>
            <div class="card-body">
                <div class="row container">
                    <a class="btn btn-sm btn-outline-success my-2 my-sm-0 m-2" asp-action="Create"><i class="fas fa-plus-circle"> Cadastrar</i></a>
                </div>
                <hr />
                <div class="table-responsive-lg">
                    <table class="table table-dark table-bordered table-hover" style="font-size: 12px;">
                        <thead class="text-center thead-light">
                            <tr>
                                <th>
                                    Nome
                                </th>
                                <th>
                                    Telefone Fixo
                                </th>
                                <th>
                                    Celular
                                </th>
                                <th>
                                    Opções
                                </th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Landline)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CellPhone)
                                    </td>
                                    <td>
                                        <div class="dropdown">
                                            <a class="btn btn-outline-secondary btn-sm btn-block dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                <i class="fas fa-address-book"></i>
                                            </a>
                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink">
                                                <a class="dropdown-item-text" data-toggle="tooltip" data-placement="top" title="Editar" asp-action="Edit" asp-route-id="@item.Id"><i class="fas fa-user-edit"></i> Editar</a>
                                                <a class="dropdown-item-text" data-toggle="tooltip" data-placement="top" title="Deletar" asp-action="Delete" asp-route-id="@item.Id"><i class="fas fa-trash-alt"></i> Deletar</a>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<br />
@Html.PagedListPager(Model, pagina => Url.Action("Index", new { pagina }), new PagedListRenderOptions
{
    PageClasses = new string[] { "page-link" },
    UlElementClasses = new string[] { "pagination justify-content-center" },
    LiElementClasses = new string[] { "page-item" },
    DisplayItemSliceAndTotal = false
})
