@model QuicklyRecycle.Models.Collector

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container py-3">
    <form asp-action="Create">
        <div class="card border border-dark">
            <div class="card-header bg-dark text-white text-center">Nova Empresa</div>
            <div class="card-body">

                <div class="row">
                    <div class="col-md-7">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="Landline" class="control-label"></label>
                            <input asp-for="Landline" class="form-control" id="phone" />
                            <span asp-validation-for="Landline" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="CellPhone" class="control-label"></label>
                            <input asp-for="CellPhone" class="form-control" id="cellphone" />
                            <span asp-validation-for="CellPhone" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-sm btn-outline-success" />
                            <a class="btn btn-sm btn-outline-primary" asp-action="Index">Voltar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>





@* CEP *@
<script type="text/javascript" src="https://code.jquery.com/jquery-3.2.1.min.js"></script>
<script type="text/javascript" src="//assets.locaweb.com.br/locastyle/2.0.6/javascripts/locastyle.js"></script>
<script src="https://unpkg.com/imask"></script>
