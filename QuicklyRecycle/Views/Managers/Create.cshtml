@model QuicklyRecycle.Models.Manager
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="container py-3">
    <form asp-action="Create" class="needs-validation" novalidate>
        <div class="card border border-dark">
            <div class="card-header bg-dark text-white text-center">Novo Representante</div>
            <div class="card-body">

                <div class="row">
                    <div class="col-md-7">
                        <div asp-validation-summary="ModelOnly" class="text-danger font-weight-bold"></div>
                        <div class="form-group">
                            <label asp-for="Name" class="control-label"></label>
                            <input asp-for="Name" class="form-control" placeholder="Ex.: Jorge Rommel Milito" required/>
                            <div class="invalid-feedback">
                                Preencha o campo com um Nome
                            </div>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="Telefone" class="control-label"></label>
                            <input asp-for="Telefone" class="form-control" id="phone" placeholder="(00) 0000-0000" required/>
                            <div class="invalid-feedback">
                                Preencha o campo com um Telefone
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="CompanyId" class="control-label"></label>
                            <select asp-for="CompanyId" class="form-control" asp-items="ViewBag.CompanyId" required>
                                <option value="" selected disabled hidden>Selecione a Empresa</option>
                            </select>
                            <div class="invalid-feedback">
                                Preencha o campo com o Nome da Empresa
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card-footer">
                <div class="row">
                    <div class="col">
                        <div class="form-group">
                            <input type="submit" value="Create" class="btn btn-sm btn-outline-success" />
                            <a class="btn btn-sm btn-outline-primary" asp-action="Index">Voltar</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
</div>



