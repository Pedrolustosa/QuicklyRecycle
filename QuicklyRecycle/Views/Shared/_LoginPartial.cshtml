@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">
@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
        <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><i class="fas fa-user"></i> @User.Identity.Name!</a>
    </li>
    <li class="nav-item">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-dark" data-toggle="tooltip" data-placement="top" title="Sair"><i class="fas fa-door-open"></i></button>
        </form>
    </li>
}
else
{
    <li class="nav-item">
        <a class="nav-link font-weight-bold text-success text-uppercase mb-1" data-toggle="tooltip" data-placement="top" title="Cadastrar" asp-area="Identity" asp-page="/Account/Register"><i class="fas fa-address-card"></i> </a>
    </li>
    <li class="nav-item">
        <a class="nav-link font-weight-bold text-success text-uppercase mb-1" data-toggle="tooltip" data-placement="top" title="Login" asp-area="Identity" asp-page="/Account/Login"><i class="fas fa-sign-in-alt"></i></a>
    </li>
}
</ul>
